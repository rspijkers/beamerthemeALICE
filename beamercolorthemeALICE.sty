\definecolor{AliceBlue}{HTML}{001768}

% different shades
% TODO: make a darker shade of AliceRed for banner
\colorlet{AliceLightBlue}{AliceBlue!50}
\colorlet{AliceLighterBlue}{AliceBlue!30}
\colorlet{AliceDarkBlue}{AliceBlue!50!AliceBlack}
\colorlet{AliceDarkRed}{AliceRed!80!AliceBlack}
\colorlet{AliceGray}{AliceBlack!80}

